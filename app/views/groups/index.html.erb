<h3><span class="label label-default">Groups</span></h3>
<div class="row">
	<div class="col-lg-2">
		
	</div>
	<div class="col-lg-6">
    <div class="input-group">
    <%= form_for(@group, remote: true) do |g| %>
       <%= g.text_field :group ,placeholder:"add new group"%>
       <%= g.submit "add new Group",id:'addgroup' %>
    <% end %>
    </div>
  </div>
</div>
<hr>
<div class="row">
	<div class="col-lg-6 ">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">My Groups</h3>
		  </div>
		  <div class="panel-body" id="garea">
		    <%= @groups.each do |group| %>
		    	<div class="row">
		    		<label onclick="showarea(<%= group.group %>)"><%= group.group %></label>
		    		<button><a href=""><span class="glyphicon glyphicon-user" aria-hidden="true"></span></a></button>	
		    		<button><a href=""><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></button>	
		    	</div>
			<% end %>
		  </div>
		</div>
	</div>
	<div class="col-lg-6 " id="groupdiv">
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title" id="groupname"></h3>
		  </div>
		  <div class="panel-body">
		    	<div class="row">
		    		<div class="col-lg-2">
					</div>
					<div class="col-lg-6">
						<div class="input-group">
					      <input type="text" class="form-control" placeholder="Add New Friend...">
					      <span class="input-group-btn">
					        <button class="btn btn-default" type="button">Add</button>
					      </span>
					    </div>
					</div>
		    	</div>
		  </div>
		</div>
	</div>
</div>

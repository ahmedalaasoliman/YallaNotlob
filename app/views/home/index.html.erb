

  <div class="col-sm-2 pull-right" style="direction: rtl;">
    <img src="assets/fat.gif" class="gap-right" style="width: 200px; height: 200px;">
  </div>



<div class="col-sm-5" >
    <h2 style="color: #ffffff;">Latest Orders</h2>
  
      <table class="table  "  >
        <tbody>

        <% @order.each do |order| %>

            <tr class="striped" >
              <td class="striped">
              <h4><%= order.order_for %></h4> 
               Ordered at     <%= order.created_at %> 
              <br> 
               Ordered from   <%= order.order_from %></td>

            </tr>
        <% end %>
        </tbody>
      </table>
  
</div>

      

<div class="col-sm-5">
          <h2>Friends Activity</h2>

<% @activities.each do |activity| %>
        <div class="post_wrapper">
      <!-- name :<%= link_to activity.owner.name %> -->
      <h3 class="title"><%=  activity.owner.name %>
      has ordered from
      <%= activity.trackable.restaurant%></h3>

    <p class="date"><%= time_ago_in_words(activity.created_at) %> ago</p>


     </div>
  <% end %>

    </div>
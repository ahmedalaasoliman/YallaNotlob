

  <div class="col-sm-2 pull-right" style="direction: rtl;">
    <img src="assets/fat.gif" class="gap-right" style="width: 200px; height: 200px;">
  </div>



<div class="col-sm-5" >
    <h2 style="color: #ffffff;">Latest Orders</h2>
  
      <table class="table  "  >
        <tbody>

        <% @order.each do |order| %>

            <tr class="striped" >
              <td class="striped">
              <h4><%= order.order_for %></h4> 
               Ordered at     <%= order.created_at %> 
              <br> 
               Ordered from   <%= order.order_from %></td>

            </tr>
        <% end %>
        </tbody>
      </table>
  
</div>

      

<div class="col-sm-5">
    <h2 style="color: #ffffff;">Friends Activity</h2>


      <table class="table " >
        <tbody>
       	 
      	 <% @friend_orders.each do |friend_orders| %>
          	<tr class="" >
        <td>
        <%= friend_orders.name %>
        <br>
        <%= friend_orders.order_for %>
        <br>
        <%= friend_orders.order_from %>
        </td>
          	</tr>
      	 <% end %>
      </tbody>
    </table>

</div>